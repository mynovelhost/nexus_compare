{
  "settings": {
    "analysis": {
      "analyzer": {
        "person": {
          "type": "pattern",
          "pattern": "(\\s*\\<\\s*)|(\\s*\\>\\s*)|(\\s*\\(\\s*)|(\\s*\\)\\s*)|(\\A\\s+)|(\\s+\\Z)"
        }
      }
    }
  },
  "mappings": {
    "component": {
      "dynamic_templates": [
        {
          "dates": {
            "match_mapping_type": "date",
            "mapping": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        {
          "attributes.npm": {
            "path_match": "attributes.npm.*",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        {
          "assets.attributes.npm": {
            "path_match": "assets.attributes.npm.*",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        }
      ],
      "properties": {
        "assets": {
          "properties": {
            "attributes": {
              "properties": {
                "npm": {
                  "properties": {
                    "name": {
                      "type": "string",
                      "index": "not_analyzed"
                    },
                    "version": {
                      "type": "string",
                      "index": "not_analyzed"
                    },
                    "author": {
                      "type": "string",
                      "index": "analyzed",
                      "analyzer": "person"
                    },
                    "contributors": {
                      "type": "string",
                      "index": "analyzed",
                      "analyzer": "person"
                    },
                    "description": {
                      "type": "string",
                      "index": "analyzed"
                    },
                    "license": {
                      "type": "string",
                      "index": "analyzed"
                    },
                    "keywords": {
                      "type": "string",
                      "index": "analyzed",
                      "analyzer": "whitespace"
                    },
                    "os": {
                      "type": "string",
                      "index": "analyzed",
                      "analyzer": "whitespace"
                    },
                    "cpu": {
                      "type": "string",
                      "index": "analyzed",
                      "analyzer": "whitespace"
                    },
                    "repository_url": {
                      "type": "string",
                      "index": "not_analyzed"
                    },
                    "repository_type": {
                      "type": "string",
                      "index": "not_analyzed"
                    },
                    "bugs_url": {
                      "type": "string",
                      "index": "not_analyzed"
                    },
                    "bugs_email": {
                      "type": "string",
                      "index": "not_analyzed"
                    },
                    "homepage": {
                      "type": "string",
                      "index": "not_analyzed"
                    },
                    "tagged_is": {
                      "type": "string",
                      "index": "analyzed",
                      "analyzer": "whitespace"
                    },
                    "tagged_not": {
                      "type": "string",
                      "index": "analyzed",
                      "analyzer": "whitespace"
                    },
                    "search_normalized_version": {
                      "type": "string",
                      "index": "not_analyzed"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
